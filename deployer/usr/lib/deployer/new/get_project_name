#!/bin/bash


set -eu -o pipefail

export ARGS=("${@,,}")


read_project_name () {
  printf "Kindly enter your project name: "; 
  read PROJECT_NAME;
}


[ -n "${ARGS[1]:-}" ] \
  && [ ! "skip" = "${ARGS[1]}" ] \
  && PROJECT_NAME="${ARGS[1]}" \
  || read_project_name \


[ -n "$PROJECT_NAME" ] \
  || exit 106


[ ! -d "$PROJECT_NAME" ] \
  && mkdir ./${PROJECT_NAME} \
  && cp ${LIBRARY_BASE}/new/templates/.gitignore ./${PROJECT_NAME} \
  || exit 105


export PROJECT_NAME
